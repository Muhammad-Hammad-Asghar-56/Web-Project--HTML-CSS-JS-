extends base.pug

block scripts
  script(src='/static/script.js')
block style 
    style 
        include ../static/style.css
        include ../static/contactStyle.css

block content
    div#container
        h1 Contact US
        form(action="/contact", method="post" id="formContainer")
            input(type="text", name="name" placeHolder="Enter the name") 
            input(type="phone", name="phone" placeHolder="Enter the Phone Number") 
            input(type="text", name="email" placeHolder="Enter the Email ID") 
            input(type="text", name="address" placeHolder="Enter the address")  
            button(type="submit" id='SubmitBtn')  Submit              
            
            