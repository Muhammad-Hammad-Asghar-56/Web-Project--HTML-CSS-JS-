doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
        style 
            include ../static/style.css
        script 
            //- include ../static/script.css
    body 
        div#container   
            h1=Day
            div#box
                -var no=0;
                ul
                    each val in items
                        -no++
                        li
                            form(action=`/deleteSubList/${itemsListName}`, method="post" class="Items") 
                                input(type="checkbox" name=`delete` value=val  onChange="this.form.submit()" )
                                p(name ="value")=val
            form(action=`/updateSubList/${itemsListName}`, method="post") 
                input(type="text", name="Add" id="addNewItemName"  autocomplete="off" placeHolder="Enter the New Items")
                button(type="submit" id='addItemBtn') +