doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title=title
        style 
            include ../static/style.css
        script 
            //- include ../static/script.css
    body 
        div#container   
            h1=Day
            div#box
                -var no=0;
                ul
                    each val in item
                        -no++
                        li
                            input(type="checkbox", name="")
                            p=val

            form(action="/", method="post") 
                input(type="text", name="textInput" id="addNewItemName"  autocomplete="off" placeHolder="Enter the New Items")
                button(type="submit" id='addItemBtn') +
            